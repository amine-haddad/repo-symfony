{% extends "base.html.twig" %}
{% block title %}SÃ©rie{{ program.id }}
{% endblock %}

{% block body %}
	{#{{ dump(seasons)}}#}
	<div class="card mb-3" style="max-width: 540px;">
		<div class="row g-0">
			<div class="col-md-4">
				<img src="{{program.poster}}" class="img-fluid rounded-start" alt="{{ program.title }} poster">
			</div>
			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title">{{ program.title }}</h5>
					<p class="card-text">{{ program.summary }}</p>
					<p class="card-text">
						<small class="text-muted"> {% trans %}app.category{% endtrans %}:
							{{ program.category.name }}</small>
					</p>
					{#bouton ajout a la watchlist#}

					{% if (is_granted("ROLE_ADMIN") or is_granted("ROLE_CONTRIBUTOR")) %}
						<a id="watchlist" href="{{ path('program_watchlist', {id: program.id})}}">
							<i class="bi {{ app.user.isInWatchlist(program) ? 'bi-heart-fill' : 'bi-heart' }}"></i>
						</a>
					{% endif %}
				</div>
			</div>
		</div>
	</div>

	<strong>{% trans %}app.actors{% endtrans %} :</strong>

	<ul>

		{% for actor in program.actors %}

			<li>{{ actor.name }}
			</li>

		{% else %}

			<li>{% trans %}app.no_actors{% endtrans %}</li>

		{% endfor %}

	</ul>

</div>
{% for season in seasons %}
	<div>
		<h3>{% trans %}app.season{% endtrans %}
			{{ season.number}}
		</h3>
		<a href="{{ path('program_season_show', {slug:program.slug, seasonId:season.id} ) }}">{% trans %}app.sea_season{% endtrans %}</a>
	</div>
{% endfor %}

<div>
	<a href="{{ path('program_index') }}">
	{% trans %}app.back_serie{% endtrans %}
		
	</a>
</div>{% endblock %}
