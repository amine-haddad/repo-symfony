{% extends "base.html.twig" %}
{% block body %}

	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			<p>{{ program.summary }}</p>
			<p>Catégorie :
				{{ program.category.name }}</p>
		</div>
		<div class="container-fluid">
			<p>
				id de la saison :{{season.id}}</p>
			<p>
				nom de la serie :{{season.program.title}}</p>
			<p>Saison :{{season.number}}</p>
			<p>Année de sortie :{{ season.year}}</p>
			<p>Desciption
				{{season.description}}</p>

			{% for episode in episodes %}
				<div class="container-fluid">
					<divclass="rowm-5">
						<div class="col">
							<h1>
								Titre :
								{{episode.title}}</h1>
							<p>
								indice de l episodes :
								{{episode.id}}</p>

							Episode :
							{{episode.number}}
							<p>Synopsys :{{episode.synopsis}}</p>
						</div>
					</div>


				</div>
			</div>
      	<div>
				<a href="">
					Voir le film
				</a>
			</div>
			<div>
				<a href="{{ path('program_show', { id: program.id }) }}">
					Retour aux saisons
				</a>
			</div>
		{% endfor %}
	{% endblock %}
